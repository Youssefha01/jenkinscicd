pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('BUILD') {
            steps {
                echo 'DEV'
                // Crée un répertoire de sortie nommé 'output' s'il n'existe pas déjà
                bat 'mkdir output'
                
                // Copie le fichier HTML vers le répertoire de sortie
                bat 'copy index.html output/
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Production'
            }
        }
    }
}
