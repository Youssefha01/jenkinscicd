pipeline {
    agent any
    
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('BUILD') {
            steps {
                echo 'DEV'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
        stage('Deploy') {
            steps {
                // Récupérer les dernières modifications depuis GitHub
                git branch: 'main', url: 'https://github.com/Youssefha01/jenkinscicd'
                
                
                
                // Démarrer un serveur web local pour déployer le fichier HTML
                sh 'cd C:\Users\User\Desktop\Nouveau dossier && python3 -m http.server 8000 &'
            }
        }
    }
}
