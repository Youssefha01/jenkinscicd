pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('BUILD') {
            steps {
                echo 'DEV'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
        stage('Deploy') {
            steps {
                script {
                    // Étape de construction de l'image Docker
                    docker.build('mon_application', '.').push()
                    // Étape de déploiement du conteneur Docker
                    docker.image('mon_application').run('-p 8080:80')
                }
            }
        }
    }
}
